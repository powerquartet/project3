    "dnd": "^0.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "firebase": "^5.8.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.4.12",
    "react": "^16.8.1",
    "react-dnd": "^7.0.2",
    "react-dnd-html5-backend": "^7.0.2",
    "react-dom": "^16.8.1",
    "react-native": "^0.58.4",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^7.1.0",
    "styled-components": "^4.1.3"
